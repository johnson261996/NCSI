<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:background="@color/colorWhite"
        android:layout_height="fill_parent" >
<android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/gradient">

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="COMMITTEE"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"/>
    <ImageView
            android:layout_width="18dp"
            android:id="@+id/icon_sidemenu_com"
            android:src="@drawable/ic_sidemenu"
            android:layout_marginRight="5dp"
            android:layout_gravity="end"
            android:layout_height="18dp" />
</android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/full_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FAFBFD"
            app:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardUseCompatPadding="true">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
        <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="18dp"
                android:id="@+id/iv_search"
                android:gravity="center"
                android:layout_height="18dp"
                android:src="@drawable/ic_search"/>

        <android.support.v7.widget.AppCompatEditText
                android:layout_toRightOf="@+id/iv_search"
                android:layout_toLeftOf="@+id/iv_filter"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50sp"
                android:id="@+id/search_com"
                android:drawablePadding="10dp"
                android:background="@color/colorWhite"
                android:hint="Search committee member here.."/>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusableInTouchMode="true">

        <ListView
                android:id="@+id/listview_committe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="5dp"
                android:drawSelectorOnTop="false" />

    </RelativeLayout>
</LinearLayout>
