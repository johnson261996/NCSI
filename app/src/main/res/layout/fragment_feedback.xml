<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:background="@color/colorWhite"
        android:layout_height="fill_parent" >

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/gradient">

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="FeedBack"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"/>
        <ImageView
                android:layout_width="18dp"
                android:id="@+id/icon_sidemenu_feed"
                android:src="@drawable/ic_sidemenu"
                android:layout_marginRight="5dp"
                android:layout_gravity="end"
                android:layout_height="18dp" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout android:layout_width="350dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="17dp"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:text="We would like to here from you"/>

    <ImageView
            android:layout_width="100dp"
            android:id="@+id/ic_like"
            android:layout_marginTop="25dp"
            android:src="@drawable/feedback"
            android:layout_gravity="center"
            android:layout_height="100dp" />


        <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:text="Subject"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>
        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/colorWhite"
                android:inputType="textEmailAddress"
                android:id="@+id/et_feedsubject"
                android:layout_marginTop="15dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:text="Message"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>
        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="start"
                android:background="@color/colorWhite"
                android:hint="Type the message here"
                android:inputType="textEmailAddress"
                android:id="@+id/et_feedmessage"
                android:layout_marginTop="15dp"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_feedsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#FF317B"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:padding="12dp"
                android:text="Submit">
        </android.support.v7.widget.AppCompatButton>


    </LinearLayout>
</LinearLayout>