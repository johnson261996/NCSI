<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_title"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="NUERO CRITICAL CARE SOCIETY OF INDIA"
            android:textSize="15dp" />


    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/full_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FAFBFD"
            app:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardUseCompatPadding="true">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">


                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                    <ImageView android:layout_width="match_parent"
                               android:layout_height="170dp"
                               android:id="@+id/gallery_image"
                               android:scaleType="fitXY"
                               android:src="@drawable/doctor"/>

                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/transparent_circle"
                            android:layout_centerInParent="true"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerInParent="true"
                              android:textSize="40dp"
                              android:id="@+id/count_images"
                              android:textColor="@color/colorWhite"
                              android:text="5"/>

                </RelativeLayout>

        </LinearLayout>

            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="180dp">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="20dp"
                           android:id="@+id/heart"
                           android:src="@drawable/ic_heart"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/heart"
                        android:id="@+id/favourite"
                        android:textColor="@color/colorBlack"
                        android:text="100"
                        android:textSize="15dp" />

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerHorizontal="true"
                           android:id="@+id/commet"
                           android:src="@drawable/ic_chat"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/commet"
                        android:id="@+id/comment"
                        android:textColor="@color/colorBlack"
                        android:text="100"
                        android:textSize="15dp" />

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="50dp"
                           android:layout_alignParentRight="true"
                           android:id="@+id/share"
                           android:src="@drawable/ic_share"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/share"
                        android:layout_marginLeft="-50dp"
                        android:id="@+id/forward"
                        android:textColor="@color/colorBlack"
                        android:text="50"
                        android:textSize="15dp" />
            </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
