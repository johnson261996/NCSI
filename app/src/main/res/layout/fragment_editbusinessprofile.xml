<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="25dp">

        <com.pixplicity.fontview.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:textSize="12sp"
                app:pix_font="@string/font_family_regular" />

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAFBFD"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="start"
                    android:background="@color/colorWhite"
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_epemail"/>
        </android.support.v7.widget.CardView>

        <com.pixplicity.fontview.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textSize="12sp"
                app:pix_font="@string/font_family_regular" />

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAFBFD"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="start"
                    android:background="@color/colorWhite"
                    android:inputType="number"
                    android:id="@+id/et_epmobileno"/>
        </android.support.v7.widget.CardView>

        <com.pixplicity.fontview.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qualification"
                android:textSize="12sp"
                app:pix_font="@string/font_family_regular" />

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAFBFD"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="start"
                    android:background="@color/colorWhite"
                    android:inputType="text"
                    android:id="@+id/et_epqualification"/>
        </android.support.v7.widget.CardView>

        <com.pixplicity.fontview.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textSize="12sp"
                app:pix_font="@string/font_family_regular" />

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FAFBFD"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="start"
                    android:background="@color/colorWhite"
                    android:inputType="text"
                    android:id="@+id/et_epexp"/>
        </android.support.v7.widget.CardView>

        <com.pixplicity.fontview.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="office Address"
                android:textSize="12sp"
                app:pix_font="@string/font_family_regular" />

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FAFBFD"
                app:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:background="@color/colorWhite"
                    android:id="@+id/et_epaddr"/>
        </android.support.v7.widget.CardView>


            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/gradient"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:padding="12dp"
                    android:text="update profile">
            </android.support.v7.widget.AppCompatButton>

    </LinearLayout>
  </ScrollView>
</LinearLayout>
