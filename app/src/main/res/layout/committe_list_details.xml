<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/full_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FAFBFD"
        app:cardElevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal" >

        <ImageView
                android:id="@+id/imageView_com"
                android:layout_width="100dp"
                android:padding="10dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/doctor" />

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


            <TextView
                    android:id="@+id/name_comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:text="Name"
                    android:textSize="15dp" />


            <TextView
                    android:id="@+id/email_comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_comm"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Email"
                    android:textSize="13dp" />

            <TextView
                    android:id="@+id/prof_comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_comm"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Profession"
                    android:textSize="13dp" />

            <TextView
                    android:id="@+id/exp_comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prof_comm"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Experience"
                    android:textSize="13dp" />



        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
